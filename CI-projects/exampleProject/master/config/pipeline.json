{
  "build-name-format": "{project}_{build_hash}_build_{build_index}",
  "docker": {
    "image": "dockeruser/dockerimage:latest",
    "args": "-it --rm",
    "project-dest": "/root/project",
    "build-output-dest": "/root/project/Builds/",
    "stop-timeout": 10
  },
  "webhook": {
    "name": "master",
    "authorized-actors": [
      "git actor"
    ]
  },
  "prepare-build": {
    "master-dir-commands": [
      "sudo git pull origin master "
    ],
    "get-git-hash": true,
    "build-dir-commands": [
      "sudo git checkout --detach {git_hash}"
    ]
  },
  "environment": {

  },
  "pipeline": [
    {
      "name": "build",
      "commands": [
        "./before_script.sh",
        "./build.default.sh"
      ]
    }
  ],
  "cleanup": {
    "remove_build_source": true,
    "7z_build": true,
    "7z_hash": "sha1"
  }
}